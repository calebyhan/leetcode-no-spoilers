{
  "manifest_version": 3,
  "name": "LeetCode No-Spoilers",
  "version": "1.0.0",
  "description": "Hides substantial code content on LeetCode while keeping problem descriptions and small inline code visible.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://leetcode.cn/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://leetcode.cn/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ]
}
